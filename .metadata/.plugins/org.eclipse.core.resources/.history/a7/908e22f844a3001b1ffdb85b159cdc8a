package bsu.rfe.java.group7.lab7.Ryndin.var1;

import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.IOException;
import java.net.InetSocketAddress;
import java.net.ServerSocket;
import java.net.Socket;
import java.net.UnknownHostException;
import java.util.ArrayList;

import javax.swing.JOptionPane;

public class InstantMessenger extends Thread 
{
	final MainFrame UserFrame;///поле связи с MainFrame
	
	//string message можно записать сообщение сюда - а затем из MainFrame получить доступ методами MainFrame к данным, после увел=домления
	private String SomeMessage;
	private String Address_Sender;
	private String Name_Sender;
	private String SurName_Sender;
	private static final int User_Port = 4567;
	public static ArrayList<MessageListener> listeners;
	  
	

	public InstantMessenger(MainFrame SomeFrame) 
	{
		UserFrame = SomeFrame;
		// TODO Auto-generated constructor stub
	}
	///удалить Run и заменить на слушатель событий
	///возвращать сообщение через listener или через методы mainframe предварительно уведомив MainFrame через instant messenger
	public void run() 
	{
		try 
		{
			final ServerSocket serverSocket = new ServerSocket(User_Port);
			while (!Thread.interrupted()) 
			{
				final Socket socket = serverSocket.accept();
				final DataInputStream in = new DataInputStream(socket.getInputStream());
				// Считываем данные отправителя
				final String address = ((InetSocketAddress) socket.getRemoteSocketAddress()).getAddress().getHostAddress();
				final String senderName = in.readUTF();
				final String senderSurName = in.readUTF();
				final String message = in.readUTF();
				// Закрываем соединение
				socket.close();
				SomeMessage = new String(message);
				Address_Sender = new String(address);
				Name_Sender = new String(senderName);
				SurName_Sender = new String(senderSurName);
				
				// Выводим сообщение в текстовую область
				
			}
		} 
		catch (IOException e) 
		{
			e.printStackTrace();
			JOptionPane.showMessageDialog(UserFrame,"Ошибка в работе сервера", "Ошибка",JOptionPane.ERROR_MESSAGE);
		}
	}
	
	public void sendMessage() 
	{
		try 
		{
			// Получаем необходимые параметры
			
			
			
			final String destinationAddress = (UserFrame.Get_textFieldIP()).getText();
			final String MyAddress = "localhost";
			final int Port = Integer.parseInt((UserFrame.Get_textFieldPort()).getText().trim());
			final String message = (UserFrame.Get_textAreaOutgoing()).getText();
			// Убеждаемся, что поля не пустые
			
			if (destinationAddress.isEmpty()) 
			{
				JOptionPane.showMessageDialog(UserFrame,"Введите адрес узла-получателя", "Ошибка",JOptionPane.ERROR_MESSAGE);
				return;
			}
			if (message.isEmpty()) 
			{
				JOptionPane.showMessageDialog(UserFrame,"Введите текст сообщения", "Ошибка",JOptionPane.ERROR_MESSAGE);
				return;
			}
			
			// Создаем сокет для соединения
			//final Socket socket = new Socket(destinationAddress, Port,MyAddress,User_Port);
			final Socket socket = new Socket(destinationAddress, Port);
			// Открываем поток вывода данных
			final DataOutputStream out = new DataOutputStream(socket.getOutputStream());
			// Записываем в поток имя
			//out.writeUTF(senderName);
			// Записываем в поток сообщение
			out.writeUTF(message);
			// Закрываем сокет
			socket.close();
			
			UserFrame.Get_textAreaIncoming().append("Я -> " + destinationAddress + ": "+ message + "\n");
			// Очищаем текстовую область ввода сообщения
			UserFrame.Get_textAreaOutgoing().setText("");
			
			
		} 
		catch (UnknownHostException e) 
		{
			e.printStackTrace();
			JOptionPane.showMessageDialog(UserFrame,"Не удалось отправить сообщение: узел-адресат не найден","Ошибка", JOptionPane.ERROR_MESSAGE);
		} 
		catch (IOException e) 
		{
			e.printStackTrace();
			JOptionPane.showMessageDialog(UserFrame,"Не удалось отправить сообщение", "Ошибка",JOptionPane.ERROR_MESSAGE);
		}
	}
	
	
	
	GetAllInfo()
	{
		
	}
	
	public void addMessageListener(MessageListener listener) 
	{
		synchronized (listeners) 
		{
		    listeners.add(listener);
		}
	}
	public void removeMessageListener(MessageListener listener) 
	{
		synchronized (listeners) 
		{
		   listeners.remove(listener);
		}
	}
	
	private void notifyListeners(Peer sender, String message) 
	{
		synchronized (listeners) 
		{
			for (MessageListener listener : listeners) 
			{
			listener.messageReceived(sender, message);
			}
		}
	}
	
}
